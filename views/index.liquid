{% render 'partials/head.liquid'
  , title: 'Stories' %}

<h1>All stories</h1>

<nav>
  <form role="search">
    <input type="search" role="searchbox" id="search" />
    <label for="search">Search for stories</label>
    <button>Submit search</button>
  </form>

  <button>Animal</button>

  <button>Season</button>
  <ul class="options">
  {% for season in seasons %}
    <li><a href="/filter?season={{ season.id }}">{{ season.season }}</a></li>
  {% endfor %}
  </ul>

  <button>Language</button>
  <ul class="options">
  {% for language in languages %}
    <li><a href="/filter?language={{ language.id }}">{{ language.language }}</a></li>
  {% endfor %}
  </ul>

  <button>Sorting</button>
  <ul class="options">
    <li><a href="/sort=alphabetical">Alphabetical</a></li>
    <li><a href="/sort=playtime">Playtime</a></li>
  </ul>
</nav>

<ul class="stories">
  {% for story in stories %}
  <li>
    <h2>{{ story.title }}</h2>
    <p>Summary: {{ story.summary }}</p>
    <p>Season: {{ story.season }}</p>
    <p>Playtime: {{ story.playtime }} </p>
    <p>Animal: {{ story.animal }} </p>

    {% assign language = languages | find: "id", story.language %}
    <p>Language: {{ language.language }}</p>

    {% assign season = seasons | find: "id", story.season %}
    <p>Season: {{ season.season }}</p>

  </li>
  {% endfor %}
</ul>

{% render 'partials/foot.liquid' %}